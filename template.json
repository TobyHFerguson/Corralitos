{
    "variables": {
	"uek_boot_iso_url": null
	, "uek_iso_checksum": null
	, "uek_iso_checksum_type": null
	, "install_iso_file": null
	, "minor_version": null
	, "http_proxy": ""
	, "headless": "true"

    },
    "provisioners": [
	{
	    "type": "shell",
	    "execute_command": "echo 'vagrant'|{{ .Vars }} sudo -E -S bash '{{.Path}}'",
	    "override": {
		"virtualbox-iso": {
		    "scripts": [
			"scripts/proxy.sh",
			"scripts/base.sh",
			"scripts/vagrant.sh",
			"scripts/virtualbox.sh",
			"scripts/cleanup.sh"
		    ]
		    , "environment_vars": [
			"PROXY={{ user `http_proxy` }}"
		    ]
		}
	    }
	}
    ],
    "post-processors": [
	{
	    "type": "vagrant",
	    "override": {
		"virtualbox": {
		    "output": "ol6u{{ user `minor_version` }}-minimal-lvmi9-uek.box"
		}
	    }
	}
    ],
    "builders": [
	{
	    "type": "virtualbox-iso",
	    "boot_command": [
		"<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/kickstart/ks.cfg<enter><wait>"
	    ],
	    "boot_wait": "10s",
	    "disk_size": 102400,
	    "guest_os_type": "Oracle_64",
	    "headless": "{{ user `headless` }}",
	    "http_directory": "http",
            "iso_checksum": "{{user `uek_iso_checksum`}}",
	    "iso_checksum_type": "{{user `uek_iso_checksum_type`}}",
	    "iso_url": "{{user `uek_boot_iso_url`}}",
	    "ssh_username": "vagrant",
	    "ssh_password": "vagrant",
	    "ssh_port": 22,
	    "ssh_wait_timeout": "10000s",
	    "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
	    "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
	    "virtualbox_version_file": ".vbox_version",
	    "vboxmanage": [
		[ "modifyvm", "{{.Name}}", "--memory", "1024", "--vram", "10" ]
		, [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
		, [ "storageattach", "{{.Name}}", "--storagectl", "IDE Controller", "--port", "1", "--device", "0", "--type", "dvddrive", "--medium", "{{user `install_iso_file`}}" ]
	    ]
	    ,"vboxmanage_post": [
		["storageattach", "{{.Name}}", "--storagectl", "IDE Controller", "--port", "1", "--device", "0", "--type", "dvddrive", "--medium", "none" ]
		,["closemedium", "dvd", "{{user `install_iso_file`}}"]
	    ] 
	    , "vm_name": "ol6u{{ user `minor_version` }}-minimal-lvmi9-uek"
	}
    ]
}
